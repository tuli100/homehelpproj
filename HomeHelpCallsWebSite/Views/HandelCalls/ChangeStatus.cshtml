@model  HomeHelpCallsWebSite.Models.CallsViewModel

    @{
        ViewBag.Title = "ChangeStatus";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }


    <h4>קריאה מספר - @Html.DisplayFor(model => Model.doc_nbr) </h4>
    <h4> @Html.DisplayFor(model => Model.CALL_DSCR) </h4>
 

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                @Html.LabelFor(model => model.CALL_STAT_CODE, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.CALL_STAT_CODE, Model.StatusList, htmlAttributes: new { @class = "btn btn-default dropdown-toggle" })

                    @Html.ValidationMessageFor(model => model.CALL_STAT_CODE , "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.stat_rmrk, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.stat_rmrk, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.stat_rmrk, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group">
                @Html.LabelFor(model=>model.CALL_STAT_CODE, "סטטוס נוכחי", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DisplayFor(model => model.CALL_STAT_FULL, new { htmlAttributes = new { @value = Model.DSTN_NAME, @class = "form-control" } , @disabled = "disabled" })
                   
                </div>
            </div>

            <div>
                @Html.HiddenFor(Model => Model.doc_nbr)
                @Html.HiddenFor(Model => Model.line_nbr)
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="בצע" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }


